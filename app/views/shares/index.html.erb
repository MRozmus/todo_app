<div class="container">
  <div class="card my-3">
    <div class="card-header text-center">
      <span class="font-weight-bold">Share</span>
    </div>
    <ul class="list-group list-group-flush">
      <% @todos.each do |todo| %>
        <li class="list-group-item <%= bg_priority(todo.priority) %>">
          <span class="badge span-prio-t text-muted"><%= User.find_by(id: todo.user_id).email %></span>
          <div class="row">
            <div class="font-weight-bolder text-capitalize text-truncate col-6 col-sm-7 pt-2"><%= todo.title %></div>
            <%= link_to "Show", share_path(todo.id), class: "btn btn-primary ml-auto col-3" %>
          </div>
          <span class="badge span-prio text-muted">Priority: <%= read_priority(todo.priority) %> | <%= read_status(todo.status) %></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>