function deleteChilds(parent){
  while (parent.hasChildNodes()) {  
    parent.removeChild(parent.firstChild);
  }
}
deleteChilds(todos);
deleteChilds(popup);
popup.innerHTML = "<%= j render "layouts/popup" %>";
todos.innerHTML = "<%= j render partial: "todos/todos", locals: { render_name: "To Do", render_status: false, render_btn_name: [10003].pack('U*'), render_btn_class: "success", render_bg: "" } %><%= j render partial: "todos/todos", locals: { render_name: "Done", render_status: true, render_btn_name: [10005].pack('U*'), render_btn_class: "danger", render_bg: "bg-card-done" } %>";