<button type="button" class="btn btn-danger mx-1" data-toggle="modal" data-target="#exampleModal">
  Delete
</button>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirm</h5>
      </div>
      <div class="modal-body">
        Do you really want to delete <strong><%= @todo.title %></strong>?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= link_to "Delete", todo_path(@todo.id), method: :delete, class: "btn btn-danger mx-1" %>
      </div>
    </div>
  </div>
</div>