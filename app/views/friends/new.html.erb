<div class="container">
  <div class="card p-3 mt-3 bg-form">
    <%= form_with url: '/friends', method: :post do |form| %>
      <%= form.label 'User email' %>
      <%= form.text_field :email, class: "form-control mb-1" %>
      <%= form.hidden_field :sender_id, value: current_user.id %>
      <%= form.submit 'Send request', class: "btn btn-info btn-block mt-3" %>
    <% end %>
  </div>
</div>